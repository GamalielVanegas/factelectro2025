<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Acción para abrir el wizard de configuración -->
  <record id="action_dte_config_wizard" model="ir.actions.act_window">
    <field name="name">Configurar DTE</field>
    <field name="res_model">dte.config.wizard</field>
    <field name="view_mode">form</field>
    <!-- referencia completa al XML-ID de la vista -->
    <field name="view_id" ref="dte_sv.view_dte_config_wizard"/>
    <field name="target">new</field>
  </record>

  <!-- Menú bajo 'Facturación Electrónica' -->
  <menuitem
    id="menu_dte_config"
    name="Configurar DTE"
    parent="menu_dte_root"
    sequence="5"
    action="action_dte_config_wizard"/>
</odoo>

